
correct_pin = 4590

while True:
    try:
        entered_pin = int(input("Введите пин-код: "))
    except:
        print("Ошибка. Введите число!")
        continue

    if entered_pin == correct_pin:
        print("Доступ разрешен")
        break
    else:
        print("Ошибка. Попробуйте еще раз")
