# None означает что еще нет чисел
max_number = None

# Бесконечный цикл для ввода чисел
while True:
    # Пользователь вводит число
    num = int(input("Введите число (0 - стоп): "))

    # Eсли ввели 0 - останавливаем программу
    if num == 0:
        break

    # Проверяем что число натуральное
    if num < 1:
        print("Число должно быть натуральным!")
        continue

    # Проверяем больше ли число того, что уже есть
    if max_number is None or num > max_number:
        max_number = num  # Запоминаем новое максимальное число

# После цикла проверяем были ли введены числа
if max_number is not None:
    print(f"Самое большое число: {max_number}")
else:
    print("Не было введено чисел")
