print("БАНКОМАТ")

#Начальный баланс
balance = 1000

#Бесконечный цикл меню
while True:
    print("МЕНЮ:")
    print("1. Узнать баланс")
    print("2. Снять 100 руб")
    print("3. Положить 100 руб")
    print("4. Выход")
    print("=" * 25)

    #Пользователь выбирает операцию
    choice = int(input("Выберите операцию (1-4): "))

    #Узнать баланс
    if choice == 1:
        print(f"Ваш баланс: {balance} руб.")

    #Снять деньги
    elif choice == 2:
        if balance >= 100:
            balance -= 100
            print("Снято 100 руб.")
            print(f"Остаток: {balance} руб.")
        else:
            print("Недостаточно средств!")

    #Положить деньги
    elif choice == 3:
        balance += 100
        print("Положено 100 руб.")
        print(f"Баланс: {balance} руб.")

    #Выход
    elif choice == 4:
        print("До свидания!")
        break  # Выходим из цикла

    #Неправильная команда
    else:
        print("Неверная команда!")
